{
  "compilerOptions": {
    "allowJs": true,
    "target": "es2022",
    "useDefineForClassFields": true,
    "module": "es6",
    "moduleResolution": "node",
    "baseUrl": ".",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "outDir": "./",
    "noImplicitAny": true,
    "skipLibCheck": true
  },
  "include": [
    "index.ts",
    "docs/example-script.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
